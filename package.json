{
  "name": "@storeon/router",
  "version": "0.1.0",
  "description": "Storeon module for URL routing",
  "main": "index.js",
  "author": "Ivan Solovev <ivan@solovev.one>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf api.md",
    "lint": "eslint *.js",
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller *.md",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.1",
    "documentation": "^11.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.1",
    "storeon": "^0.8.3",
    "yaspeller": "^5.1.0"
  },
  "size-limit": [
    {
      "limit": "611 B",
      "path": "index.js"
    }
  ],
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && size-limit"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "storeon",
      "versioning",
      "crosstab",
      "gzipped",
      "GitHub",
      "createRouter",
      "storeCallback",
      "RegExp"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "node/no-unpublished-require": "off",
      "es5/no-es6-static-methods": "off",
      "node/no-missing-require": "off",
      "func-style": "off"
    }
  }
}
